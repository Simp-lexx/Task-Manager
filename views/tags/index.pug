extends /layouts/app.pug

block content
  .container-fluid
    table.table.table-stripped
      h2.text-center.my-4= `Tasks with tag "${tag.name}"`
        tr
          th.text-center ID
          th.text-center Name
          th.text-center Status
          th.text-center AssignedTo
          th.text-center Created by
          th.text-center Description
          th.text-center Tags
            
      tbody
        each task in tasks
          tr
            td.text-center= task.id
            td.text-center
              a(href=urlFor('tasks#view', { id: task.id }))= task.name
            td.text-center= task.status
            td.text-center= task.assignedTo
            td.text-center= task.creator
            td.text-center= task.description
            td.text-center
              row
                each tag in task.tagsNames
                  .d-inline
                    span
                      .badge.badge-success.mx-1= tag