extends /layouts/app.pug

block content
  .container
    h1.text-center.my-5 Create new task
    .row.justify-content-center.pb-5
      .col-12.col-lg-4
        +formFor(f, { url: urlFor('tasks#create'), method: 'post' })
          +input(f, 'name', 'Task Name')
          +select(f, 'assignedToId','Assigned To', users)
          +input(f, 'Tags', 'Task Tags')
          +textarea(f, 'description', 'Task Description')
          +button('Create')
